    // Initialize charts when the DOM is loaded
    document.addEventListener('DOMContentLoaded', function() {
        // Sample data for different time intervals
        const timeIntervals = {
            '30min': {
                labels: ['9:00', '9:30', '10:00', '10:30', '11:00', '11:30', '12:00', '12:30', '13:00', '13:30', '14:00', '14:30', '15:00', '15:30', '16:00', '16:30', '17:00'],
                staffData: [180, 195, 210, 225, 235, 240, 220, 190, 200, 230, 240, 245, 240, 235, 225, 210, 190],
