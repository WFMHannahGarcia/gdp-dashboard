            },
            'hourly': {
                labels: ['9:00', '10:00', '11:00', '12:00', '13:00', '14:00', '15:00', '16:00', '17:00'],
                staffData: [185, 215, 235, 220, 200, 235, 245, 230, 190],
                productivityData: [86, 91, 90, 82, 83, 89, 90, 85, 83],
                attendanceData: [92, 94, 96, 95, 94, 96, 97, 94, 92]
            },
            'daily': {
                labels: ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'],
                staffData: [240, 238, 245, 242, 235, 150, 120],
                productivityData: [88, 87, 90, 89, 86, 80, 78],
                attendanceData: [94, 95, 96, 95, 93, 85, 82]
            },
            'weekly': {
                labels: ['Week 1', 'Week 2', 'Week 3', 'Week 4'],
                staffData: [235, 240, 242, 248],
                productivityData: [86, 87, 88, 87],
                attendanceData: [93, 94, 94, 94]
            },
            'monthly': {
                labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'],
                staffData: [220, 225, 230, 235, 240, 245, 248, 246, 244, 242, 240, 238],
                productivityData: [84, 85, 86, 87, 88, 89, 88, 87, 86, 87, 88, 87],
                attendanceData: [92, 93, 93, 94, 94, 95, 94, 94, 93, 94, 94, 93]
            }
        };

        // Initialize with daily data
        let currentInterval = 'daily';
        
        // Staff Distribution Chart
        const staffCtx = document.getElementById('staffDistributionChart').getContext('2d');
        const staffChart = new Chart(staffCtx, {
            type: 'line',
            data: {
                labels: timeIntervals[currentInterval].labels,
                datasets: [{
                    label: 'Active Staff',
                    data: timeIntervals[currentInterval].staffData,
                    backgroundColor: 'rgba(59, 130, 246, 0.2)',
                    borderColor: 'rgba(59, 130, 246, 1)',
                    borderWidth: 2,
                    tension: 0.3,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: false,
                        min: Math.min(...timeIntervals[currentInterval].staffData) * 0.9,
                        grid: {
                            color: 'rgba(0, 0, 0, 0.05)'
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: true,
                        position: 'top'
                    }
                }
            }
        });

        // Department Chart
        const deptCtx = document.getElementById('departmentChart').getContext('2d');
        const deptChart = new Chart(deptCtx, {
            type: 'doughnut',
            data: {
                labels: ['Engineering', 'Marketing', 'Sales', 'Customer Support', 'HR', 'Finance', 'Operations'],
                datasets: [{
                    data: [65, 40, 45, 50, 25, 15, 8],
                    backgroundColor: [
                        'rgba(59, 130, 246, 0.8)',
                        'rgba(16, 185, 129, 0.8)',
                        'rgba(245, 158, 11, 0.8)',
                        'rgba(239, 68, 68, 0.8)',
                        'rgba(139, 92, 246, 0.8)',
                        'rgba(236, 72, 153, 0.8)',
                        'rgba(75, 85, 99, 0.8)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'right'
                    }
                }
            }
        });

        // Productivity Chart
        const prodCtx = document.getElementById('productivityChart').getContext('2d');
        const prodChart = new Chart(prodCtx, {
            type: 'bar',
            data: {
                labels: timeIntervals[currentInterval].labels,
                datasets: [{
                    label: 'Productivity (%)',
                    data: timeIntervals[currentInterval].productivityData,
                    backgroundColor: 'rgba(139, 92, 246, 0.7)',
                    borderColor: 'rgba(139, 92, 246, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: false,
                        min: 70,
                        max: 100,
                        grid: {
                            color: 'rgba(0, 0, 0, 0.05)'
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });

        // Attendance Chart
        const attCtx = document.getElementById('attendanceChart').getContext('2d');
        const attChart = new Chart(attCtx, {
            type: 'line',
            data: {
                labels: timeIntervals[currentInterval].labels,
                datasets: [{
                    label: 'Attendance Rate (%)',
                    data: timeIntervals[currentInterval].attendanceData,
                    backgroundColor: 'rgba(16, 185, 129, 0.2)',
                    borderColor: 'rgba(16, 185, 129, 1)',
                    borderWidth: 2,
                    tension: 0.3,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: false,
                        min: 80,
                        max: 100,
                        grid: {
                            color: 'rgba(0, 0, 0, 0.05)'
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                }
            }
        });

        // Handle interval button clicks
        const intervalBtns = document.querySelectorAll('.interval-btn');
        intervalBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                // Update active button styling
                intervalBtns.forEach(b => {
                    b.classList.remove('bg-blue-500', 'text-white');
                    b.classList.add('bg-gray-100');
                });
                this.classList.remove('bg-gray-100');
                this.classList.add('bg-blue-500', 'text-white');
                
                // Update charts with new data
                const interval = this.getAttribute('data-interval');
                currentInterval = interval;
                
                // Update Staff Distribution Chart
                staffChart.data.labels = timeIntervals[interval].labels;
                staffChart.data.datasets[0].data = timeIntervals[interval].staffData;
                staffChart.options.scales.y.min = Math.min(...timeIntervals[interval].staffData) * 0.9;
                staffChart.update();
                
                // Update Productivity Chart
                prodChart.data.labels = timeIntervals[interval].labels;
                prodChart.data.datasets[0].data = timeIntervals[interval].productivityData;
                prodChart.update();
                
                // Update Attendance Chart
                attChart.data.labels = timeIntervals[interval].labels;
                attChart.data.datasets[0].data = timeIntervals[interval].attendanceData;
                attChart.update();
            });
        });
    });
</script>
